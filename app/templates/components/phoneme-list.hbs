<div class="container">
<h2>{{title}}</h2>
{{#each phoneme as |item|}}
    <div class="col-md-3">
      <div class="letter">
        <h1>{{item.symbol}}</h1>
        <p>{{item.description}}</p>
        {{#if item.sound }}
        <audio controls>
              <source src="../audio/{{item.sound}}.wav" type="audio/wav">
              <source src="../audio/{{item.sound}}.ogg" type="audio/ogg">
              <source src="../audio/{{item.sound}}.mp3" type="audio/mpeg">  
              Your browser does not support the audio tag.
        </audio>
        {{/if}}
      </div>
    </div>
{{/each}}
</div>

